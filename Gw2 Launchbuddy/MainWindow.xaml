                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="200*"/>
                                    <RowDefinition Height="30"/>
                                </Grid.RowDefinitions>

                                <StackPanel>
                                    <Label Content="Videomode Info:" FontSize="16" FontWeight="Bold"/>
                                    <Label x:Name="lab_videoname" Content="Videoname:"/>
                                    <Label x:Name="lab_videopath" Content="Path:"/>
                                    <Label x:Name="lab_videoresolution" Content="Resolution:"/>
                                    <Label x:Name="lab_videoformat" Content="Format:"/>
                                    <Label x:Name="lab_videolength" Content="Length:"/>
                                </StackPanel>
                                <MediaElement x:Name="cinema_videoplayback" Grid.Row="0" Grid.Column="1" Margin="5,0" LoadedBehavior="Manual" UnloadedBehavior="Manual" Loaded="cinema_videoplayback_Loaded" MediaOpened="cinema_videoplayback_MediaOpened"/>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50*"/>
                                        <ColumnDefinition Width="50*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="bt_cinema_videoplay" Content="&gt;" Grid.Row="0" Grid.Column="0"  Margin="5,0"  Click="bt_cinema_videoplay_Click"/>
                                    <Button x:Name="bt_cinema_videostop" Content="Stop" Grid.Row="0" Grid.Column="1"  Margin="5,0" BorderThickness="5" Click="bt_cinema_videostop_Click"/>
                                </Grid>
                                <Button x:Name="bt_cinema_setvideo" Content="Set Video" Grid.Row="1" Margin="5,0" Click="bt_cinema_setvideo_Click" ToolTip="Choose the videofile used for video mode.&#x0a;This video will be played in the background."/>
                            </Grid>

                        </StackPanel>
                    </Grid>

                </TabItem>
                
                <TabItem x:Name="tab_clientfix">
                    <TabItem.Header>
                        <StackPanel>
                            <Image Height="20" Source="Resources/Icons/crashfix.png"/>
                            <Label FontSize="10" Margin="0,-5,0,-7">Crashes</Label>
                        </StackPanel>
                    </TabItem.Header>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="50*"/>
                            <RowDefinition Height="25*"/>
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50*"/>
                                <ColumnDefinition Width="50*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="100*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Button Content="Fix" Grid.Column="1" Grid.Row="2" IsEnabled="False" x:Name="bt_fixcrash" FontSize="14" FontWeight="Bold" ToolTip="Try to fix the currently selected crash." Click="bt_fixcrash_Click"/>
                            <Label Content="Latest Crashes" x:Name="lb_lastcrashes" Style="{StaticResource H2}"/>
                            <Label Content="Info" Grid.Column="1" Style="{StaticResource H2}"/>
                            <ListView x:Name="lv_crashlogs" DisplayMemberPath="{Binding Crashlog}" Grid.Row="1" Grid.RowSpan="2" FontWeight="Bold" SelectionChanged="lv_crashlogs_SelectionChanged">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="CrashType" Width="100" DisplayMemberBinding="{Binding Solutionkey}"/>
                                        <GridViewColumn Header="CrashTime" Width="130" DisplayMemberBinding="{Binding CrashTime}"/>
                                        <GridViewColumn Header="Build" Width="100" DisplayMemberBinding="{Binding Build}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <ScrollViewer Grid.Column="1" Grid.Row="1">
                                <TextBlock  Margin="5" x:Name="tblock_crashinfo" ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Auto" TextWrapping="Wrap"/>
                            </ScrollViewer>
                            
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30*"/>
                                <ColumnDefinition Width="70*"/>
                            </Grid.ColumnDefinitions>
                            <Label Content="Clientifix the Quaggan" Style="{StaticResource H2}"/>
                            <Image  MaxHeight="150" Source="Resources/clientifix.png" ToolTip="A quaggan who wants to help youuuuu."/>
                            <Grid Grid.Column="1" Margin="20">
                                <Image  Source="Resources/opacitymask.png" Stretch="Fill"/>
                                <TextBlock  Text="Coooo! Quaggan will do the best to help you!" Foreground="White" Margin="15" x:Name="tblock_crashsolutioninfo" TextWrapping="Wrap" FontSize="14"/>
                            </Grid>

                        </Grid>
                        <Button ToolTip="Fix and observe your latest game crashes by selecting them in the list" Grid.Row="0" ToolTipService.InitialShowDelay="0" ToolTipService.ShowDuration="100000" Grid.Column="99" VerticalAlignment="Top" HorizontalAlignment="Right" Height="20" Width="20" Content="?"   FontWeight="Bold"></Button>
                    </Grid>

                </TabItem>
                
                <TabItem>
                    <TabItem.Header>
                        <StackPanel>
                            <Image Height="20" Source="Resources/Icons/tools.png"/>
                            <Label FontSize="10" Margin="0,-5,0,-7">LB Settings</Label>
                        </StackPanel>
                    </TabItem.Header>
                    <StackPanel>

                        <Label Content="Launchbuddy Settings" Style="{StaticResource H1}"/>
                        <Button ToolTip="All non gw2 client relative settings for Launchbuddy only" Grid.Row="0" ToolTipService.InitialShowDelay="0" ToolTipService.ShowDuration="100000" Grid.Column="99" VerticalAlignment="Top" HorizontalAlignment="Right" Height="20" Width="20" Content="?"  FontWeight="Bold" Margin="-20,-30,0,0"></Button>

                        <!-- Content="Settings" FontWeight="Bold" FontSize="14"/>
                        <StackPanel Margin="5">
                            <CheckBox Content="Use Graphical Gameinstance Manager" />
                            <CheckBox Content="Search for new versions of Launchbuddy on Start"/>
                        </StackPanel>
                        
                        <Separator Margin="5"/>
                        -->
                        <Separator Margin="3"/>
                        <CheckBox x:Name="cb_lbupdatescheck" Content="Automatically Check for Launchbuddy Updates" Margin="5" Click="cb_lbupdatescheck_Click" ToolTip="Choose if Launchbuddy should automatically search for updates on startup."/>
                        <CheckBox x:Name="cb_useinstancegui" Content="Use Game Instance GUI" Margin="5" Click="cb_useinstancegui_Click" ToolTip="Choose if the instance manager should be launched whenever you launch gw2."/>
                        <CheckBox x:Name="cb_useloadingui" Content="Show Loading Circle" Margin="5"  ToolTip="Choose if the Loading UI should show up on startup." Click="cb_useloadingui_Click"/>
                        <Label Content="Launchbuddy Releases" Style="{StaticResource H2}"/>
                        <Grid Height="250" Margin="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="60*"/>
                                <ColumnDefinition Width="40*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="150*"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Label Content="Description:" Grid.Row="0" Grid.Column="1" Style="{StaticResource H2}"/>
                            <ListView x:Name="lv_lbversions" Grid.Row="0" Grid.RowSpan="2" SelectionChanged="ListView_SelectionChanged" IsSynchronizedWithCurrentItem="True">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}"/>
                                        <GridViewColumn Header="Version" Width="75" DisplayMemberBinding="{Binding Version}"/>
                                        <GridViewColumn Header="Releasedate" Width="100" DisplayMemberBinding="{Binding Date}"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <WebBrowser x:Name="wb_releasedescr" Grid.Row="1" Grid.Column="1" Margin="3,0,0,0" />
                            <DockPanel  Grid.Row="2" Grid.ColumnSpan="2">
                                <Button x:Name="bt_fetchlbversions" Margin="3" Content="Check for Updates" DockPanel.Dock="Left" Click="bt_fetchlbversions_Click" ToolTip="Check for Gw2 Launchbuddy updates."/>
                                <Button x:Name="bt_downloadrelease" Margin="3" Content="Download" Click="bt_downloadrelease_Click" IsEnabled="False" DockPanel.Dock="Right" ToolTip="Download the selected Launchbuddy version."/>
                            </DockPanel>

                        </Grid>
                        <Separator Margin="-3,15,0,10"/>
                        <Label Content="Bug Report:" Style="{StaticResource H2}"></Label>

                        <Button x:Name="bt_bugreport" Content="Report a Bug"  Click="bt_bugreport_Click" Height="30"/>
                    </StackPanel>
                </TabItem>

            </TabControl>


        </Grid>




    </Grid>







</Window>


